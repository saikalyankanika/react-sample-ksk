pipeline {
    agent none
    stages {
        stage('Pod Template') {
            agent any // Allocate an agent for this stage
            steps {
                script {
                    checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/saikalyankanika/shared-pipeline.git']])

                    sh returnStatus: true, script: '''pwd'''

                    echo env.collect { k, v -> "$k=$v" }.join("\n")

                    def initScript = new GroovyShell().parse(new File('init.groovy'))
                    initScript.call()
                }
            }
        }
    }
}
